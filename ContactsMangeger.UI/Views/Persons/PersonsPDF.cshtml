@model IEnumerable<PersonResponse>
@{
    Layout = null;
}
<link href="@("http://" + Context.Request.Host.ToString()+"/StyleSheet.css")" rel="stylesheet"/>
<h1>Persons</h1>
<table class="table w-100 mt">
    <thead>
        <tr>
            <th>Person Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Country Name</th>
            <th>Address</th>
            <th>Receive News Letters</th>

        </tr>
    <tbody>
            @foreach (PersonResponse person in Model)
            {
            <tr>
                <td style="width:12%">@person.PersonName</td>
                <td style="width:18%">@person.Email</td>
                <td style="width:11%">@person.DateOfBirth?.ToString("dd MMM yyyy")</td>
                <td style="width:6%">@person.Age</td>
                <td style="width:9%">@person.Gender</td>
                <td style="width:8%">@person.CountryName</td>
                <td style="width:18%">@person.Address</td>
                <td style="width:10%">@person.ReceiveNewLetters</td>
            </tr>
            }
    </tbody>
    </thead>
</table>
